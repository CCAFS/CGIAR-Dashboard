{% set pageParams = {
    'title': 'Innovations | CGIAR Program Results Dashboard',
    'customCSS': [
      'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css',
      'https://use.fontawesome.com/releases/v5.2.0/css/all.css',
      './css/customInputsFlat.css',
      './css/sideMenu.css',
      './css/global.css',
      './css/innovations.css',
    ],
    'customJS': [
      "./js/innovations.js",
      "./js/sideMenu.js"
    ]
  }
%}

{% include './pages/header.twig' with pageParams %}

<div class="container-fluid">
<div class="row justify-content-center">
  <div class="col-md-2">
  {% include './pages/side-menu.twig' with pageParams %}
  </div>
  <div class="col-md-9">
    <!-- Filters -->
    {% if embed %}
      {% include './pages/filters.twig' with pageParams %}
    {% endif %}
  <div class="main-content">

      <button class="navbar-toggler" type="button">
        <span class="navbar-toggler-icon"></span>
      </button>

      {% include './pages/message.twig' %}

      {% import './macros/tooltips.twig' as tooltips %}

      <div class="mb-4">
      <h6 class="section-title">Innovations</h6>
      <p class="section-description">Innovations are new or significantly improved outputs or groups of outputs - including management practices, knowledge or technologies.</p>
    </div>

      <!-- Filters inside generated by Javascript -->
      <div class="alert alert-dark selection" style="display:none"></div>

      <div class="form-group row">
        <div class="col-md-7">
          <div class="top-line"></div>
          <h6 class="subTitle">Innovation Location</h6>
          <span class="filter-description">Select one or more countries (press ctrl) to filter.</span>
          <div class="imap-container">
            <div id="innovations-map"></div>
          </div>
        </div>
        <div class="col-md-5">
         <div class="top-line"></div>
          <h6 class="subTitle">
          {% for chartInfo in chartsInfo %}
            {{ tooltips.tooltipInfo('Innovations by Type', chartInfo.title, chartInfo.info) }}
          {% endfor %}
          Innovations by Type<h6>
          <span class="filter-description">Click on donut to filter.</span>
          <div class="itype-container">
          <div id="innovations-type"></div>
          </div>
        </div>
      </div>
    <div class="form-group row">
      <div class="col-md-4">
        <div class="top-line"></div>
        <h6 class="subTitle">Innovations by Stage</h6>
        <span class="filter-description">Click on donut to filter.</span>
        <div class="istage-container">
          <div id="innovations-stage"></div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="top-line"></div>
        <h6 class="subTitle">Lead non-CGIAR Organizations</h6>
        <span class="filter-description">Click on bars to filter.</span>
        <div class="istage-container">
          <div id="itop5Lead-org"></div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="top-line"></div>
        <h6 class="subTitle">Contributing External Organizations</h6>
        <span class="filter-description">Click on bars to filter.</span>
        <div class="istage-container">
          <div id="itop5Contributing-org"></div>
        </div>
      </div>
    </div>

     <div class="form-group bot-block">
        <div class="top-line"></div>
        <h6 class="subTitle">List of Innovations</h6>
          <div class="ilist-container">
            <div id="innovations-list"></div>
        </div>
    </div>


{% include './pages/footer.twig'  with pageParams %}
