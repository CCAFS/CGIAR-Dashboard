{% set pageParams = {
    'title': 'Capacity Development | CGIAR Program Results Dashboard',
    'customCSS': [
      'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css',
      'https://use.fontawesome.com/releases/v5.2.0/css/all.css',
      './css/customInputsFlat.css?20210617a',
      './css/sideMenu.css?20210701a',
      './css/global.css?20210701a',
      './css/capDev.css?20200806b'
    ],
    'customJS': [
      "./js/capDev_V2.js?20210716b",
      "./js/sideMenu.js?20200806b"
    ]
  }
%}

{% include './pages/header.twig' with pageParams %}

<div class="container-fluid">
  <!-- Filters -->
  {% if embed %}
    <div class="row justify-content-center">
      <div class="col-md-2" style="display:{{ displayNav ? 'block' : 'none' }};"></div>
      <div class="col-md-10">{% include './pages/filters.twig' with pageParams %}</div>
    </div>
  {% endif %}
<div class="row justify-content-center">
  <div class="col-md-2" style="display:{{ displayNav ? 'block' : 'none' }};">
  {% include './pages/side-menu.twig' with pageParams %}
  </div>
  <div class="col-md-10" {% if displayNav==false %}style="padding-left: 0!important"{% endif %}>

  <div class="main-content">

      <button class="navbar-toggler" type="button">
        <span class="navbar-toggler-icon"></span>
      </button>

      {% include './pages/message.twig' %}

      <a class="btn btn-data2" href="./glossary" target="_blank" role="button" style="margin-left: 5px;">Go to Glossary</a>
      
      {% import './macros/tooltips.twig' as tooltips %}

      <a class="btn btn-data" href="https://doi.org/10.7910/DVN/JSQLKP" target="_blank" role="button">Access raw data</a>

      <div class="mb-4">
        <h6 class="section-title">Capacity Development</h6>
        <p class="section-description">Capacity development measures the number of people trained.</p>
      </div>

      <!-- Filters inside generated by Javascript -->
      <div class="alert alert-dark selection" style="display:none"></div>

      <div class="capDev-charts dashboard-container">
          <div id="all-capDev"></div>
      </div>


{% include './pages/footer.twig'  with pageParams %}
