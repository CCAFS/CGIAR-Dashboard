{% include './pages/header.twig' with pageParams %}


{% include './pages/main-menu.twig' with pageParams %}
<div class="container">
  <div class="main-content">
      {% include './pages/message.twig' %}
      <div class="alert alert-dark selection">
      <div class="checkedfilters clearfilters">Clear all filters</div>
      <div class="checkedfilters checkedyears"></div>
      <div class="checkedfilters checkedcrps"></div>
      </div> 
      <br />
      <div class="form-group row capDevTitles">
        <div class="col-md-3">
          <center>
          <div class="tparticipants" id="totalParticipants"><img src="./images/participants.svg" height="50px"></div>
          <h6 class="subTitle">Total Participants</h6>
          <h6 class="totalsCap">In CGIAR Activities</h6>
          </center>
        </div>
        <div class="col-md-3 capDevTotals">
          <center>
          <div class="tparticipants" id="totalTrainees"><img src="./images/trainees.svg" height="50px"></div>
          <h6 class="subTitle">Total of Trainees</h6>
          <h6 class="totalsCap">In CGIAR Training Events</h6>
          </center>
        </div>
        <div class="col-md-3">
          <center>
          <div class="tparticipants" id="totalWomen"><img src="./images/women.svg" height="50px"></div>
          <h6 class="subTitle">Total of Women</h6>
          <h6 class="totalsCap">Participants and Trainees</h6>
          </center>
        </div>
        <div class="col-md-3">
          <center>
          <div class="tparticipants" id="totalMen"><img src="./images/men.svg" height="50px"></div>
          <h6 class="subTitle">Total of Men</h6>
          <h6 class="totalsCap">Participants and Trainees</h6>
          </center>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-3">        
          <div class="totalCapDev">
            <div id="total-participants"></div>
          </div>
        </div>
        <div class="col-md-3">        
          <div class="totalCapDev">
            <div id="total-trainees"></div>
          </div>
        </div>
        <div class="col-md-3">        
          <div class="totalCapDev">
            <div id="total-women"></div>
          </div>
        </div>
        <div class="col-md-3">        
          <div class="totalCapDev">
            <div id="total-men"></div>
          </div>
        </div>
      </div>
      <br/>
      <div class="form- row">
        <div class="col-md-6">
          <h6 class="subTitle">Participants: Total Women and Men by User Type</h6>
          <div class="trainees-container">
            <div id="participants-user"></div>
          </div>
        </div>
        <div class="col-md-6">
          <h6 class="subTitle">Trainees: Total Women and Men by Training Term</h6>
          <div class="trainees-container">
            <div id="trainees-term"></div>
          </div>
        </div>
      </div>

  </div>
</div>

