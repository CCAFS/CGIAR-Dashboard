{% set pageParams = {
    'title': 'Capacity Development | CGIAR Program Results Dashboard',
    'customCSS': [
      'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css',
      'https://use.fontawesome.com/releases/v5.2.0/css/all.css',
      './css/customInputsFlat.css',
      './css/sideMenu.css',
      './css/global.css',
      './css/capDev.css'
    ],
    'customJS': [
      "./js/capDev.js?20200415",
      "./js/sideMenu.js"
    ]
  }
%}

{% include './pages/header.twig' with pageParams %}

<div class="container-fluid">
  <!-- Filters -->
  {% if embed %}
    <div class="row justify-content-center">
      <div class="col-md-2" style="display:{{ displayNav ? 'block' : 'none' }}"></div>
      <div class="col-md-9">{% include './pages/filters.twig' with pageParams %}</div>
    </div>
  {% endif %}
<div class="row justify-content-center">
  <div class="col-md-2" style="display:{{ displayNav ? 'block' : 'none' }}">
    {% include './pages/side-menu.twig' with pageParams %}
  </div>
  <div class="col-md-9">

  <div class="main-content">

      <button class="navbar-toggler" type="button">
        <span class="navbar-toggler-icon"></span>
      </button>

      {% include './pages/message.twig' %}

      {% import './macros/tooltips.twig' as tooltips %}

      <a class="btn btn-data" href="https://dataverse.harvard.edu/dataset.xhtml?persistentId=doi:10.7910/DVN/IKOHAP" target="_blank" role="button">Access raw data</a>

      <div class="mb-4">
        <h6 class="section-title">Capacity Development</h6>
        <p class="section-description">Capacity development measures the number of people trained.</p>
      </div>

      <!-- Filters inside generated by Javascript -->
      <div class="alert alert-dark selection" style="display:none"></div>

      <div class="form-grup row">
        <div class="col-md-6">
          <div class="data-year"><span class="year-tag badge badge-pill" style="display:none">2018 and 2017</span></div>
          <div class="trainees-container mt-5">
            <div id="total-trainees"></div>
          </div>
        </div>

        <div class="col-md-6">
        <div class="data-year"><span class="year-tag badge badge-pill" style="display:none">2018 and 2017</span></div>
        <div class="top-line"></div>
          <h6 class="subTitle">
          {% for chartInfo in chartsInfo %}
            {{ tooltips.tooltipInfo('Training Terms', chartInfo.title, chartInfo.info) }}
          {% endfor %}
          Long-Term Trainees: Total Women and Men</h6>
          <span class="filter-description">Click on bars to filter.</span>
          <div class="trainingTerms-container">
            <div id="trainees-longTerm"></div>
          </div>
          <div class="top-line"></div>
            <h6 class="subTitle">
             Short-Term Trainees: Total Women and Men</h6>
            <span class="filter-description">Click on bars to filter.</span>
              <div class="trainingTerms-container">
                <div id="trainees-shortTerm"></div>
              </div>
        </div>
      </div>





{% include './pages/footer.twig'  with pageParams %}
