{% set pageParams = {
    'title': 'Contribution to System Level Outcomes | CGIAR Program Results Dashboard',
    'customCSS': [
      'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css',
      'https://use.fontawesome.com/releases/v5.2.0/css/all.css',
      './css/customInputsFlat.css',
      './css/sideMenu.css',
      './css/global.css',
      './css/systemLevelOutcomes.css'
    ],
    'customJS': [ 
      "./js/systemLevelOutcomes.js",
      "./js/sideMenu.js"
    ]
  }
%}

{% include './pages/header.twig' with pageParams %}

<div class="container-fluid">
<div class="row justify-content-center">
  <div class="col-md-2">
   {% include './pages/side-menu.twig' with pageParams %}
  </div>
  <div class="col-md-9">
    <!-- Filters -->
    {% if embed %}
      {% include './pages/filters.twig' with pageParams %}
    {% endif %}
    <div class="main-content">

        <button class="navbar-toggler" type="button">
          <span class="navbar-toggler-icon"></span>
        </button>

        {% include './pages/message.twig' %}

        <div class="mb-4">
          <h6 class="section-title">Rigorous evidence of contribution to SDGs and CGIAR targets</h6>
          <p class="section-description">SLOs are the CGIAR's highest level goals, aligned with the United Nations Sustainable Development Goals (SDGs). To access CGIAR's Strategy and Results Framework 2016-30 click <a href="https://www.cgiar.org/how-we-work/strategy/" target="_blank">here</a>.</p>
        </div>

        <!-- Filters inside generated by Javascript -->
        <div class="alert alert-dark selection" style="display:none"></div>

        <div class="form-group">
            <div class="slo-container">
              <div id="slo-bar"></div>
            </div>
        </div>

        <div class="form-group bot-block">
        <div class="top-line"></div>
        <div class="form-group row d-flex justify-content-between">
          <div class="col-md-auto">
            <h6 class="subTitle">Contribution to the Sustainable Development Goals</h6>
          </div>
          <div class="col-md-auto sdg-logo">
            <a href="https://sustainabledevelopment.un.org/sdgs" target="_blank"><img src="./images/SDG_Logo.png" height="40px"></a>
          </div>
        </div>        
        <div class="targets-container">
          <div id="slo-targets"></div>
        </div>
    </div>

        <div class="form-group">
            <div class="top-line"></div>
              <h6 class="subTitle">List of Cases</h6>
            <div class="list-container">
              <div id="slo-list"></div>
            </div>
        </div>



{% include './pages/footer.twig'  with pageParams %}
