{% set pageParams = {
    'title': 'Outcome Case Reports | CGIAR Program Results Dashboard',
    'customCSS': [
      'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css',
      'https://use.fontawesome.com/releases/v5.2.0/css/all.css',
      './css/customInputsFlat.css',
      './css/sideMenu.css',
      './css/global.css',
      './css/caseStudies.css'
    ],
    'customJS': [
      "./js/portfolio.js",
      "./js/sideMenu.js"

    ]
  }
%}

{% include './pages/header.twig' with pageParams %}

<div class="container-fluid">
<div class="row justify-content-center">
  <div class="col-md-2">
  {% include './pages/side-menu.twig' with pageParams %}
  </div>

  <div class="col-md-9">
  <!-- Filters -->
  {% if embed %}
    {% include './pages/filters.twig' with pageParams %}
  {% endif %}

  <div class="main-content">

    <button class="navbar-toggler" type="button" style="display:none">
        <span class="navbar-toggler-icon"></span>
    </button>

    {% include './pages/message.twig' %}

    {% import './macros/tooltips.twig' as tooltips %}

    <div class="mb-4">
      <h6 class="section-title">Outcome Impact Case Reports (OICR)</h6>
      <span class="section-description">Short reports describing the contribution of CGIAR research to development outcomes and impact.</span>
    </div>

    <!-- Filters inside generated by Javascript -->
    <div class="alert alert-dark selection" style="display:none"></div>

    <div class="form-group row">
      <div class="col-md-7">
            <div class="top-line"></div>
            <h6 class="subTitle">OICR Location</h6>
              <span class="filter-description">Select one or more countries (press ctrl) to filter.</span>
              <div class="map-container">
                <div id="map-1"></div>
              </div>
       </div>
      <div class="col-md-5">
        <div class="top-line"></div>
        <h6 class="subTitle">Contribution to CGIAR <a href="https://cgspace.cgiar.org/bitstream/handle/10947/3865/CGIAR%20Strategy%20and%20Results%20Framework.pdf" target="_blank">Strategy and Results Framework 2016-30</a></h6>
        <span class="filter-description">Click on bars to filter.</span>
        <div class="donut-container">
          <div id="chart-2"></div>
        </div>
      </div>
    </div>
    <div class="form-group bot-block">
        <div class="top-line"></div>
        <div class="form-group row d-flex justify-content-between">
          <div class="col-md-auto">
            <h6 class="subTitle mb-2">Contribution to the Sustainable Development Goals</h6>
            <div class="sdg-title">Outcome Impact Case Reports can map to one or more SDGs.</div>
            <span class="filter-description">Click on SDGs to filter.</span>
          </div>
          <div class="col-md-auto sdg-logo">
            <a href="https://sustainabledevelopment.un.org/sdgs" target="_blank"><img src="./images/SDG_Logo.png" height="40px"></a>
          </div>
        </div>
        <div class="sdg-container">
           <div id="sdg-s"></div>
        </div>
    </div>

     <div class="form-group row">
        <div class="col-md-4">
        <div class="top-line"></div>
        <h6 class="subTitle">
        {% for chartInfo in chartsInfo %}
            {{ tooltips.tooltipInfo('Cross-Cutting Topics', chartInfo.title, chartInfo.info) }}
          {% endfor %}
          Cross-cutting Topics</h6>
          <span class="filter-description">Click on bars to filter.</span>
          <div class="cross-container">
            <div id="cci-p"></div>
          </div>
        </div>
        <div class="col-md-4">
        <div class="top-line"></div>
        <h6 class="subTitle">Outcome Impact Case Reports by Level of Maturity</h6>
        <span class="filter-description">Click on donut to filter.</span>
          <div class="maturity-container">
            <div id="m-stage"></div>
          </div>
        </div>
        <div class="col-md-4">
        <div class="top-line"></div>
        <h6 class="subTitle">Total Contributing Partners</h6>
          <div class="contributingPartners-container">
            <div id="contributing-partners"></div>
          </div>
        <h6 class="subTitle">Top 5 Contributing Partners</h6>
        <span class="filter-description">Click on bars to filter.</span>
          <div class="topPartners-container">
            <div id="top-partners"></div>
          </div>
        </div>
     </div>

    <div class="form-group bot-block">
      <div class="top-line"></div>
      <h6 class="subTitle">List of Outcome Impact Case Reports</h6>
        <div class="case-container">
            <div class="list-content">
              <div id="list-test"></div>
            </div>
        </div>
{% include './pages/footer.twig'  with pageParams %}
