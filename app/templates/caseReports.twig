{% set pageParams = {
    'title': 'OICR | CGIAR Program Results Dashboard',
    'customCSS': [
      'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css',
      'https://use.fontawesome.com/releases/v5.2.0/css/all.css',
      './css/customInputsFlat.css',
      './css/sideMenu.css',
      './css/global.css',
      './css/fulloicr.css?20200715'
    ],
    'customJS': [
      "./js/caseReports.js?20200709",
      "./js/sideMenu.js"

    ]
  }
%}

{% include './pages/header.twig' with pageParams %}

<div class="container-fluid">
<div class="row justify-content-center">
  <div class="col-md-2">
  {% include './pages/side-menu.twig' with pageParams %}
  </div>

  <div class="col-md-9">
  <!-- Filters -->
  {% if embed %}
    {% include './pages/filters.twig' with pageParams %}
  {% endif %}

  {% import "./macros/tooltips.twig" as tooltips %}

  <div class="main-content">

    <button class="navbar-toggler" type="button" style="display:none">
        <span class="navbar-toggler-icon"></span>
    </button>

    {% include './pages/message.twig' %}

    <a class="btn btn-data" href="https://dataverse.harvard.edu/dataset.xhtml?persistentId=doi:10.7910/DVN/WTAYLL" target="_blank" role="button">Access raw data</a>

    <div class="mb-4">
      <h6 class="section-title">Outcome Impact Case Reports (OICR)</h6>
      <span class="section-description">Short reports describing the contribution of CGIAR research to development outcomes and impact.</span>
    </div>

    <!-- Filters inside generated by Javascript -->
    <div class="alert alert-dark selection" style="display:none"></div>

    <div class="oicr-charts">
        <div id="all-oicr"></div>
    </div>

    {% include './pages/footer.twig'  with pageParams %}
