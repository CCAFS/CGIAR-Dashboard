{% set pageParams = {
    'title': 'Progress Towards Milestones | CGIAR Program Results Dashboard',
    'customCSS': [
      'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css',
      'https://use.fontawesome.com/releases/v5.2.0/css/all.css',
      './css/customInputsFlat.css',
      './css/sideMenu.css',
      './css/global.css',
      './css/milestones.css'
    ],
    'customJS': [
      "./js/milestones-2018.js?20200415",
      "./js/sideMenu.js"

    ]
  }
%}

{% include './pages/header.twig' with pageParams %}
{% import "./macros/buttons.twig" as buttons %}

<div class="container-fluid">
  <!-- Filters -->
  {% if embed %}
    <div class="row justify-content-center">
      <div class="col-md-2" style="display:{{ displayNav ? 'block' : 'none' }}"></div>
      <div class="col-md-9">{% include './pages/filters.twig' with pageParams %}</div>
    </div>
  {% endif %}
<div class="row justify-content-center">
  <div class="col-md-2" style="display:{{ displayNav ? 'block' : 'none' }}">
  {% include './pages/side-menu.twig' with pageParams %}
  </div>

  <div class="col-md-9">

  <div class="main-content">

    <button class="navbar-toggler" type="button">
        <span class="navbar-toggler-icon"></span>
    </button>

    {% include './pages/message.twig' %}

    <a class="btn btn-data" href="https://dataverse.harvard.edu/dataset.xhtml?persistentId=doi:10.7910/DVN/WJLRLX" target="_blank" role="button">Access raw data</a>

    <div class="mb-4">
      <h6 class="section-title">Progress Towards Milestones</h6>
    </div>

    <!-- Filters inside generated by Javascript -->
    <div class="alert alert-dark selection" style="display:none"></div>

    <div class="form-group row">
      <div class="col-md-4 mt-1">
            <div class="data-year"><span class="year-tag badge badge-pill" style="display:none">2018 Only</span></div>
            <div class="top-line"></div>
            <h6 class="subTitle">Planned Milestone Status</h6>
            <span class="filter-description">Click on donut to filter.</span>
              <div class="milestones-chart">
                <div id="milestones-status"></div>
              </div>
       </div>
      <div class="col-md-4 mt-1">
        <div class="data-year"><span class="year-tag badge badge-pill" style="display:none">2018 Only</span></div>
        <div class="top-line"></div>
        <h6 class="subTitle">Gender Relevance</h6>
        <span class="filter-description">Click on bars to filter.</span>
        <div class="milestones-chart">
          <div id="cc-milestones"></div>
        </div>
      </div>
      <div class="col-md-4 mt-1">
        <div class="data-year"><span class="year-tag badge badge-pill" style="display:none">2018 Only</span></div>
        <div class="top-line"></div>
        <h6 class="subTitle">Planned Milestones per Program</h6>
        <span class="filter-description">Click on bars to filter.</span>
        <div class="milestones-chart">
          <div id="fp-milestones"></div>
        </div>
      </div>
    </div>

    <div class="form-group bot-block">
      <div class="data-year"><span class="year-tag badge badge-pill" style="display:none">2018 only</span></div>
      <div class="top-line"></div>
      <h6 class="subTitle">List of Milestones</h6>
        <div class="case-container">
            <div class="milestones-list">
              <div id="milestones-list"></div>
            </div>
        </div>
{% include './pages/footer.twig'  with pageParams %}
