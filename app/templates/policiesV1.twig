{% set pageParams = {
    'title': 'Policies | CGIAR Program Results Dashboard',
    'customCSS': [
      'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css',
      'https://use.fontawesome.com/releases/v5.2.0/css/all.css',
      './css/customInputsFlat.css',
      './css/sideMenu.css',
      './css/global.css',
      './css/policies.css'
    ],
    'customJS': [
      "./js/policies.js?20200415",
      "./js/sideMenu.js"
    ]
  }
%}

{% include './pages/header.twig' with pageParams %}

<div class="container-fluid">
  <!-- Filters -->
  {% if embed %}
    <div class="row justify-content-center">
      <div class="col-md-2" style="display:{{ displayNav ? 'block' : 'none' }}"></div>
      <div class="col-md-9">{% include './pages/filters.twig' with pageParams %}</div>
    </div>
  {% endif %}
<div class="row justify-content-center">
  <div class="col-md-2" style="display:{{ displayNav ? 'block' : 'none' }}">
     {% include './pages/side-menu.twig' with pageParams %}
  </div>
  <div class="col-md-9">
    <div class="main-content">

    <button class="navbar-toggler" type="button">
        <span class="navbar-toggler-icon"></span>
    </button>

    {% include './pages/message.twig' %}

    {% import './macros/tooltips.twig' as tooltips %}

    <a class="btn btn-data" href="https://dataverse.harvard.edu/dataset.xhtml?persistentId=doi:10.7910/DVN/OXTLFN" target="_blank" role="button">Access raw data</a>

    <div class="mb-4">
      <h6 class="section-title">Policies</h6>
      <p class="section-description">Policies, legal instruments or investments modified in design or implementation, informed by CGIAR research.</p>
    </div>

    <!-- Filters inside generated by Javascript -->
    <div class="alert alert-dark selection" style="display:none"></div>

      <div class="form-group row">
          <div class="col-md-7 mt-1">
            <div class="data-year"><span class="year-tag badge badge-pill" style="display:none">2018 and 2017</span></div>
            <div class="top-line"></div>
            <h6 class="subTitle">Policy Location</h6>
            <span class="filter-description">Select one or more countries (press ctrl) to filter.</span>
            <div class="policies-map">
              <div id="policies-ground"></div>
            </div>
          </div>
          <div class="col-md-5 mt-1">
            <div class="data-year"><span class="year-tag badge badge-pill" style="display:none">2018 and 2017</span></div>
            <div class="top-line"></div>
            <h6 class="subTitle">Total Policies by Geographic Scope</h6>
            <span class="filter-description">Click on donut to filter.</span>
            <div class="policies-scope">
              <div id="policies-geoscope"></div>
            </div>
            <h6 class="subTitle mt-3"> Top 5 SDGs Policy Link</h6>
            <span class="filter-description">Click on SDGs to filter.</span>
            <div class="topsdgs-container">
              <div id="policies-sdgs"></div>
            </div>
          </div>
          <br><br><br>
      </div>
      <div class="form-group row">
          <div class="col-md-6 mt-1">
            <div class="data-year"><span class="year-tag badge badge-pill" style="display:none">2018 and 2017</span></div>
            <div class="top-line"></div>
            <h6 class="subTitle">Policies by Level of Maturity </h6>
            <span class="filter-description">Click on bars to filter.</span>
            <div class="maturity-level justify-content-center">
              <div id="policies-stage"></div>
            </div>
           </div>
          <div class="col-md-6 mt-1">
            <div class="data-year"><span class="year-tag badge badge-pill" style="display:none">2018 and 2017</span></div>
            <div class="top-line"></div>
            <h6 class="subTitle">
            {% for chartInfo in chartsInfo %}
              {{ tooltips.tooltipInfo('Policies by Type', chartInfo.title, chartInfo.info) }}
            {% endfor %}
            Policies by Type</h6>
            <span class="filter-description">Click on bars to filter.</span>
            <div class="investment-type">
              <div id="policies-investype"></div>
            </div>
          </div>
          <br><br><br>
      </div>
     <div class="form-group bot-block">
       <div class="data-year"><span class="year-tag badge badge-pill" style="display:none">2018 and 2017</span></div>
        <div class="top-line"></div>
        <h6 class="subTitle">List of Policies</h6>
            <div class="policies-table">
              <div id="policies-list"></div>
            </div>

     </div>


{% include './pages/footer.twig'  with pageParams %}
