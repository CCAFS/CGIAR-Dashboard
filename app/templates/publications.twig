{% set pageParams = {
    'title': 'Publications | CGIAR Program Results Dashboard',
    'customCSS': [
      'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css',
      'https://use.fontawesome.com/releases/v5.2.0/css/all.css',
      './css/customInputsFlat.css',
      './css/sideMenu.css',
      './css/global.css',
      './css/publications.css'
    ],
    'customJS': [
      "./js/papers.js",
      "./js/sideMenu.js"
    ]
  }
%}

{% include './pages/header.twig' with pageParams %}

<div class="container-fluid">
<div class="row justify-content-center">
  <div class="col-md-2">
   {% include './pages/side-menu.twig' with pageParams %}
  </div>
  <div class="col-md-9">
    <!-- Filters -->
    {% if embed %}
      {% include './pages/filters.twig' with pageParams %}
    {% endif %}
    <div class="main-content">

      <button class="navbar-toggler" type="button">
        <span class="navbar-toggler-icon"></span>
      </button>

      {% include './pages/message.twig' %}

      {% import './macros/tooltips.twig' as tooltips %}

      <div class="mb-4">
        <h6 class="section-title">Publications</h6>
        <p class="section-description">CGIAR research papers published in peer reviewed journals.</p>
      </div>

      <!-- Filters inside generated by Javascript -->
      <div class="alert alert-dark selection" style="display:none"></div>

      <div class="form-group row">
        <div class="col-md-6">
          <center><img src="./images/publications.svg" class="mb-1" width="45px">
            <h6 class="subTitle text-center mt-1">Total Publications</h6>
          <div class="total-container">
            <div id="total-papers"></div>
          </div>
          </center>
          <h6 class="subTitle">
          {% for chartInfo in chartsInfo %}
            {{ tooltips.tooltipInfo('Number of Publications', chartInfo.title, chartInfo.info) }}
          {% endfor %}
          Number of Publications</h6>
          <div class="oaisi-container">
            <div id="total-oaisi"></div>
          </div>
        </div>
        <div class="col-md-6">
        <div class="top-line"></div>
        <h6 class="subTitle">Top Journals</h6>
          <div class="topJournals-container">
            <div id="top-journals"></div>
          </div>
        </div>
      </div>
      <div class="form-group bot-block">
      <div class="top-line"></div>
        <h6 class="subTitle">List of Publications</h6>
          <div class="plist-container">
            <div id="papers-list"></div>
          </div>
      </div>

{% include './pages/footer.twig'  with pageParams %}
