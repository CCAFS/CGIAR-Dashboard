{% set pageParams = {
    'title': 'Home | CGIAR Program Results Dashboard',
    'customCSS': [
      'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css',
      'https://use.fontawesome.com/releases/v5.2.0/css/all.css',
      './css/customInputsFlat.css',
      './css/sideMenu.css',
      './css/homepage.css',
      './css/global.css'
    ],
    'customJS': [
      "./js/homepage.js?20200415",
      "./js/sideMenu.js"
    ]
  }
%}

{% include './pages/header.twig' with pageParams %}

<div class="container-fluid">
    <!-- Filters -->
    {% if embed %}
      <div class="row justify-content-center">
        <div class="col-md-2" style="display:{{ displayNav ? 'block' : 'none' }}"></div>
        <div class="col-md-9">{% include './pages/filters.twig' with pageParams %}</div>
      </div>
    {% endif %}
<div class="row justify-content-center">
  <div class="col-md-2" style="display:{{ displayNav ? 'block' : 'none' }}">
  {% include './pages/side-menu.twig' with pageParams %}
  </div>
  <div class="col-md-9">

  <div class="main-content">

    <button class="navbar-toggler" type="button">
        <span class="navbar-toggler-icon"></span>
    </button>
    {% include './pages/message.twig' %}

    <a class="btn btn-data" href="https://dataverse.harvard.edu/dataverse/CGIAR-Results-Dashboard/" target="_blank" role="button">Access raw data</a>

    <div class="mb-4">
      <h6 class="section-title">Welcome to the CGIAR results dashboard</h6>
      <p class="section-description">This dashboard provides an overview of results achieved by the CGIAR Research Programs and Platforms. We track a number of key metrics across CGIAR to help paint a picture of our research for development achievements. Figures and maps are clickable and link to additional levels of detail. All data contained in the dashboard has been quality assessed and aligns with <a href="https://www.cgiar.org/impact/annual-reports/cgiar-system-annual-performance-report-2018/" target="_blank">Annual Performance Reports</a>.
      </p>
    </div>


    <!-- Filters inside generated by Javascript -->
    <div class="alert alert-dark selection" style="display:none"></div>

    <div class="form-group row">
        <div class="col-md-4">
        <div class="d-flex justify-content-between"><div class="data-year"><span class="year-tag badge badge-pill" style="display:none">2018 and 2017</span></div><a href="./systemLevelOutcomes{% if queryParams %}?{{ queryParams }}{% endif %}" class="internalLink section-link view-enabled">View dashboard</a></div>
        <div class="top-line"></div>
        <h6 class="subTitle">1. Contribution to System Level Outcomes (SLOs)</h6>
        <div class="form-group slo-description">
         <div class="sdg-wheel"><img src="./images/SDG_Wheel.png" width="50px"></div>
         <div><p class="indicator-description">SLOs are CGIAR's highest level goals, aligned with the United Nations Sustainable Development Goals (SDGs). To access CGIAR's Strategy and Results Framework 2016-30 click <a href="https://cgspace.cgiar.org/bitstream/handle/10947/3865/CGIAR%20Strategy%20and%20Results%20Framework.pdf" target="_blank">here</a>.</p></div>
        </div>
          <div class="slo-contribution">
            <div id="slo-bar"></div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="d-flex justify-content-between"><div class="data-year"><span class="year-tag badge badge-pill" style="display:none">2018 and 2017</span></div><a href="./caseReports{% if queryParams %}?{{ queryParams }}{% endif %}" class="internalLink section-link view-enabled">View dashboard</a></div>
          <div class="top-line"></div>
          <h6 class="subTitle">2. Outcome Impact Case Reports (OICRs)</h6>
          <div class="form-group">
          <p class="indicator-description">Short reports describing the contribution of CGIAR research to development outcomes and impact.</p>
          </div>
          <div class="oicr-contribution">
            <div id="oicr-chart"></div>
          </div>
        </div>
        <div class="col-md-4">
        <div class="d-flex justify-content-between"><div class="data-year"><span class="year-tag badge badge-pill" style="display:none">2018 Only</span></div> <a href="./milestones{% if queryParams %}?{{ queryParams }}{% endif %}" class="internalLink section-link view-enabled">View dashboard</a></div>
        <div class="top-line"></div>
        <h6 class="subTitle">3. Progress Towards Milestones</h6>
        <p class="indicator-description">Milestones are a specific point of progress, expected to be reached in the coming year.</p>
          <div class="milestones-contribution d-flex justify-content-center">
            <div class="coming-soon mt-3">
              <img src="images/coming-soon.png" width="100%">
            </div>
          </div>
        </div>
     </div>

      <div class="form-group row">
        <div class="col-md-6">
          <div class="d-flex justify-content-between"><div class="data-year"><span class="year-tag badge badge-pill" style="display:none">2018 and 2017</span></div><div class="indicators-top"></div></div>
          <div class="top-line"></div>
          <h6 class="subTitle">4. Common Results Reporting Indicators (CRRIs)</h6>
          <p class="indicator-description">Quantitative indicators are used by all CGIAR Research Programs and Platforms to track progress towards impact. <i>Click on the icons to view the dashboards.</i></p>
          <div class="row indicators">
            <div class="col-md-4">
              <div class="d-flex justify-content-center">
                <a class="internalLink indicatorLink" href="./innovations{% if queryParams %}?{{ queryParams }}{% endif %}" data-toggle="tooltip" data-placement="bottom" data-html="true" title="Number of new or significantly improved outputs or groups of outputs (management practice, knowledge, research finding, technology, method, tool)."><span class="indicator-icon icon-innovations"></span></a>
              </div>
              <div class="d-flex justify-content-center"><div id="innovations-number" class="number-container"></div></div>
            </div>
            <div class="col-md-4">
              <div class="d-flex justify-content-center">
                <a class="internalLink indicatorLink" href="./partnerships{% if queryParams %}?{{ queryParams }}{% endif %}" data-toggle="tooltip" data-placement="bottom" data-html="true" title="Number of external entities working with CGIAR to achieve common results."><span class="indicator-icon icon-partnerships"></span></a>
              </div>
              <div class="d-flex justify-content-center"><div id="partnerships-number" class="number-container"></div></div>
            </div>
            <div class="col-md-4">
              <div class="d-flex justify-content-center">
                <a class="internalLink indicatorLink" href="./policies{% if queryParams %}?{{ queryParams }}{% endif %}" data-toggle="tooltip" data-placement="bottom" data-html="true" title="Number of policies / strategies / laws / regulations / budgets / investments / curricula modified in design or implementation, informed by CGIAR research."><span class="indicator-icon icon-policies"></span></a>
              </div>
              <div class="d-flex justify-content-center"><div id="policies-number" class="number-container"></div></div>
            </div>
          </div>
          <div class="row indicators">
            <div class="col-md-4">
              <div class="d-flex justify-content-center">
                <a class="internalLink indicatorLink" href="./capDev{% if queryParams %}?{{ queryParams }}{% endif %}" data-toggle="tooltip" data-placement="bottom" data-html="true" title="Number of people trained, disaggregated into men and women and long term (academic degree training) vs short term (everything else)."><span class="indicator-icon icon-capDev"></span></a>
              </div>
              <div class="d-flex justify-content-center"><div id="capDev-number" class="number-container"></div></div>
            </div>
            <div class="col-md-4">
              <div class="d-flex justify-content-center">
                <a class="internalLink indicatorLink" href="./publications{% if queryParams %}?{{ queryParams }}{% endif %}" data-toggle="tooltip" data-placement="bottom" data-html="true" title="Number of CGIAR research papers published in peer reviewed journals."><span class="indicator-icon icon-publications"></span></a>
              </div>
              <div class="d-flex justify-content-center"><div id="publications-number" class="number-container"></div></div>
            </div>
            <div class="col-md-4">
              <div class="d-flex justify-content-center">
                <a class="internalLink indicatorLink" href="./altmetric{% if queryParams %}?{{ queryParams }}{% endif %}" data-toggle="tooltip" data-placement="bottom" data-html="true" title="Alternative Metrics Score for CGIAR information products provide a measure of societal engagement, influence and broader impacts of their research (adapted from https://www.altmetric.com/audience/institutions/).">
                  <span class="indicator-icon icon-altmetrics"><span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span><span class="path5"></span><span class="path6"></span><span class="path7"></span><span class="path8"></span></span>
                </a>
              </div>
              <div class="d-flex justify-content-center"><div id="altmetric-number" class="number-container"></div></div>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="d-flex justify-content-between"><div class="data-year"><span class="year-tag badge badge-pill" style="display:none">2018 Only</span></div><a href="./insights{% if queryParams %}?{{ queryParams }}{% endif %}" class="internalLink section-link view-enabled">View dashboard</a></div>
          <div class="top-line"></div>
          <h6 class="subTitle">Insights</h6>
          <p class="indicator-description">Top 25 Research Institutes co-publishing peer-reviewed articles with CGIAR Research Programs and Platforms.</p>
           <div class="insights"><div id="insights-chart"></div></div>
        </div>

      </div>

{% include './pages/footer.twig'  with pageParams %}
