{% set pageParams = {
    'title': 'Home | CGIAR Program Results Dashboard',
    'customCSS': [
      'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css',
      'https://use.fontawesome.com/releases/v5.2.0/css/all.css',
      './css/customInputsFlat.css',
      './css/sideMenu.css',
      './css/homepage.css',
      './css/global.css'
    ],
    'customJS': [
      'https://code.jquery.com/jquery-3.3.1.min.js',
      'https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js',
      'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js',
      'https://www.amcharts.com/lib/3/amcharts.js',
      'https://www.amcharts.com/lib/3/pie.js',
      'https://www.amcharts.com/lib/3/themes/light.js',
      "./js/libs/tableau/tableau-2.2.2.min.js",
      "./js/libs/sly/sly.min.js",
      "./js/homepage.js",
      "./js/sideMenu.js"
    ]
  }
%}

{% include './pages/header.twig' with pageParams %}


<div class="container-fluid">
<div class="row justify-content-center">
  <div class="col-md-2">
  {% include './pages/side-menu.twig' with pageParams %}
  </div>
  <div class="col-md-9">
    <!-- Filters -->
    {% if embed %}
      {% include './pages/filters.twig' with pageParams %}
    {% endif %}
    
  <div class="main-content">

    <button class="navbar-toggler" type="button">
        <span class="navbar-toggler-icon"></span>
    </button>

    {% include './pages/message.twig' with pageParams %}

    <!-- Filters inside generated by Javascript -->
    <div class="alert alert-dark selection" style="display:none"></div>
    
    <div class="form-group row">
        <div class="col-md-4">
        <h6 class="subTitle">1. Contribution to <strong>System Level Outcomes</strong> (SLOs)</h6>
        <p class="indicator-description">SLOs are the CGIAR’s highest level goals, aligned with the United Nation’s Sustainable Development Goals (SDGs).</p>
          <div class="chart-container slo-contribution">
            <div id="slo-bar"></div>
          </div>
        </div>
        <div class="col-md-4">
        <h6 class="subTitle">2. <strong>Outcome Impact Case Reports</strong> (OICRs)</h6>
        <p class="indicator-description">Short reports describing the contribution of CGIAR research to development outcomes and impact.</p>
          <div class="chart-container oicr-contribution">
            <div id="oicr-chart"></div>
          </div>
        </div>
        <div class="col-md-4">
        <h6 class="subTitle">3. Progress Towards <strong>Milestones</strong></h6>
        <p class="indicator-description">Milestones are a specific point of progress, expected to be reached in the coming year.</p>
          <div class="chart-container milestones-contribution">
            <div id="milestones"></div>
          </div>
        </div>
     </div>

      <div class="form-group row">
        <div class="col-md-6">
              <h6 class="subTitle">4. <strong>Common Reporting Indicators</strong> (CRIs)</h6>
              <p class="indicator-description">Quantitative indicators are used by all CGIAR programs to track progress towards impact. </p>
              <div class="numbers"><div id="reporting-indicators"></div></div>
        </div>

        <div class="col-md-6">
          <h6 class="subTitle">Insights</h6>
        </div>

      </div>

  </div>
  </div>
</div>
</div>

{% include './pages/footer.twig'  with pageParams %}
