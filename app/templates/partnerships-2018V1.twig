{% set pageParams = {
    'title': 'Partnerships | CGIAR Program Results Dashboard',
    'customCSS': [
      'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css',
      'https://use.fontawesome.com/releases/v5.2.0/css/all.css',
      './css/customInputsFlat.css',
      './css/sideMenu.css',
      './css/global.css',
      './css/partnerships.css'
    ],
    'customJS': [
      "./js/partnerships-2018.js?20200415",
      "./js/sideMenu.js"
    ]
  }
%}

{% include './pages/header.twig' with pageParams %}

<div class="container-fluid">
  <!-- Filters -->
  {% if embed %}
    <div class="row justify-content-center">
      <div class="col-md-2" style="display:{{ displayNav ? 'block' : 'none' }}"></div>
      <div class="col-md-9">{% include './pages/filters.twig' with pageParams %}</div>
    </div>
  {% endif %}
  <div class="row justify-content-center">
  <div class="col-md-2" style="display:{{ displayNav ? 'block' : 'none' }}">
   {% include './pages/side-menu.twig' with pageParams %}
  </div>
  <div class="col-md-9">
  <div class="main-content">

  <button class="navbar-toggler" type="button">
        <span class="navbar-toggler-icon"></span>
  </button>

  {% include './pages/message.twig' %}

  <a class="btn btn-data" href="https://dataverse.harvard.edu/dataset.xhtml?persistentId=doi:10.7910/DVN/KEGEUE" target="_blank" role="button">Access raw data</a>

  <div class="mb-4">
    <h6 class="section-title">Partnerships</h6>
    <p class="section-description">A Partnership is a recognized relationship between CGIAR Research Programs and Platforms and another institution/institutions external to CGIAR, to jointly undertake activities that contribute to each institution's mandate. A Partnership can include multiple partners. Partnerships reported here represent a selection of the total number of CGIAR partnerships.</p>
  </div>

  <!-- Filters inside generated by Javascript -->
  <div class="alert alert-dark selection" style="display:none"></div>

   <div class="form-group row">
      <div class="col-md-7 mt-1">
            <div class="top-line"></div>
            <h6 class="subTitle">Partner HQ Location</h6>
            <span class="filter-description">Select one or more countries (press ctrl) to filter.</span>
              <div class="partnerships-map">
                <div id="partnerships-map"></div>
              </div>
       </div>
      <div class="col-md-5 mt-1">
            <div class="top-line"></div>
            <h6 class="subTitle">Partnerships by Main Area</h6>
            <span class="filter-description">Click on donut to filter.</span>
              <div class="partnerships-mainarea">
                <div id="partnerships-main"></div>
              </div>
       </div>
    </div>

    <div class="form-group row">
      <div class="col-md-6">
        <div class="top-line"></div>
        <h6 class="subTitle">Partners by Type</h6>
        <span class="filter-description">Click on bars to filter.</span>
        <div class="partnerships-chart">
          <div id="partnerships-type"></div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="top-line"></div>
        <h6 class="subTitle">Top Partners</h6>
        <span class="filter-description">Click on bars to filter.</span>
        <div class="partnerships-chart">
          <div id="top-partnerships"></div>
        </div>
      </div>
    </div>

    <div class="form-group bot-block">
        <div class="top-line"></div>
        <h6 class="subTitle">List of Partnerships</h6>
          <div class="partnerships-detail">
            <div id="partnerships-list"></div>
        </div>
    </div>


{% include './pages/footer.twig'  with pageParams %}
