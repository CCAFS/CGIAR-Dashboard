{% set pageParams = {
    'title': 'Capacity Development | CGIAR Program Results Dashboard',
    'customCSS': [
      'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css',
      'https://use.fontawesome.com/releases/v5.2.0/css/all.css',
      './css/customInputsFlat.css?20210617a',
      './css/sideMenuNew.css?20210624a',
      './css/global.css?20210624a',
      './css/glossary.css?20210617a'
    ],
    'customJS': [
      './js/libs/jquery/jquery-3.4.1.min.js',
      'https://cdnjs.cloudflare.com/ajax/libs/jquery-csv/1.0.3/jquery.csv.min.js',
      './js/glossary.js?20210630a',
      './js/sideMenu.js?20210506a',
    ]
  }
%}

{% include './pages/header.twig' with pageParams %}

<div class="container-fluid">
    <!-- Filters -->
    {% if embed %}
    <div class="row justify-content-center">
      <div class="col-md-1" style="display:{{ displayNav ? 'flex' : 'none' }}; justify-content: center;"></div>
      <div class="col-md-10">{% include './pages/filters.twig' with pageParams %}</div>
    </div>
  {% endif %}
<div class="row justify-content-center">
  <div class="col-md-1" style="display:{{ displayNav ? 'flex' : 'none' }}; justify-content: center;">
  {% include './pages/side-menu-new.twig' with pageParams %}
  </div>
  <div class="col-md-11" {% if displayNav==false %}style="padding-left: 0!important"{% endif %}>
    <div class="main-content">
    <button class="navbar-toggler" type="button" style="display:none">
        <span class="navbar-toggler-icon"></span>
    </button>

    {% include './pages/message.twig' %}

    <div class="mb-4">
      <h6 class="section-title">Glossary</h6>
      <p class="section-description">This glossary section provides definitions of the key concepts used in the CGIAR Results Framework.</p>
      <iframe id="svg-iframe" width="100%" height="600"  frameBorder="0" src="images/svg-interactive.svg?20210630a"></iframe>
      <div class="clearFilterBtn" onclick="loadTerms('0', 'All terms')">SHOW ALL TERMS</div>
      <div class="tableWrapper">
          <table>
            <tbody id="termsDefinitionsTable">
            </tbody>
          </table>
      </div>
    </div>
    
{% include './pages/footer.twig'  with pageParams %}