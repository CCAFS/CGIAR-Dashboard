{% set pageParams = {
    'title': 'Insights | CGIAR Program Results Dashboard',
    'customCSS': [
      'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css',
      'https://use.fontawesome.com/releases/v5.2.0/css/all.css',
      './css/customInputsFlat.css?20200731c',
      './css/sideMenu.css?20200731c',
      './css/global.css?20200731c',
      './css/insights.css?20200731c'
    ],
    'customJS': [
      "./js/insights.js?20200731c",
      "./js/sideMenu.js?20200731c"

    ]
  }
%}

{% include './pages/header.twig' with pageParams %}

<div class="container-fluid">
  <!-- Filters -->
  {% if embed %}
    <div class="row justify-content-center">
      <div class="col-md-2" style="display:{{ displayNav ? 'block' : 'none' }}"></div>
      <div class="col-md-9">{% include './pages/filters.twig' with pageParams %}</div>
    </div>
  {% endif %}
<div class="row justify-content-center">
  <div class="col-md-2" style="display:{{ displayNav ? 'block' : 'none' }}">
  {% include './pages/side-menu.twig' with pageParams %}
  </div>

  <div class="col-md-9">

  <div class="main-content">

    <button class="navbar-toggler" type="button" style="display:none">
        <span class="navbar-toggler-icon"></span>
    </button>

    {% include './pages/message.twig' %}

    <div class="mb-4">
      <h6 class="section-title">Insights</h6>
      <span class="section-description">In this tab we explore interesting connections between different parts of the Annual Performance Report data set. Stay tuned for more insights!</span>
    </div>

    <!-- Filters inside generated by Javascript -->
    <div class="alert alert-dark selection" style="display:none"></div>

    <div class="form-group bot-block">
      <div class="data-year"><span class="year-tag badge badge-pill" style="display:none">2018 Only</span></div>
        <div class="top-line"></div>
        <h6 class="subTitle">Top Institutes co-Publishing Peer-Reviewed Articles with CGIAR Research Programs and Platforms</h6>
    <div class="form-group row">
      <div class="col-md-6">
        <span class="filter-description">Select one or more countries (press ctrl) to filter.</span>
        <div class="map-container">
          <div id="insights-map"></div>
        </div>
      </div>
      <div class="col-md-6">
        <span class="filter-description">Click on the heatmap to filter charts.</span>
        <div class="heatmap-container">
        <div id="insights-heatmap"></div>
        </div>
      </div>
    </div>
    </div>

    <div class="form-group">
      <div class="data-year"><span class="year-tag badge badge-pill" style="display:none">2018 and 2017</span></div>
        <div class="top-line"></div>
          <h6 class="subTitle">List of Publications</h6>
        <div class="list-container">
          <div id="insights-list"></div>
        </div>
    </div>

    {% include './pages/footer.twig'  with pageParams %}
