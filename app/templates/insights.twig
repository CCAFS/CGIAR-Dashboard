{% set pageParams = {
    'title': 'Insights | CGIAR Program Results Dashboard',
    'customCSS': [
      'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css',
      'https://use.fontawesome.com/releases/v5.2.0/css/all.css',
      './css/customInputsFlat.css',
      './css/sideMenu.css',
      './css/global.css',
      './css/insights.css'
    ],
    'customJS': [
      "./js/insights.js",
      "./js/sideMenu.js"

    ]
  }
%}

{% include './pages/header.twig' with pageParams %}

<div class="container-fluid">
<div class="row justify-content-center">
  <div class="col-md-2">
  {% include './pages/side-menu.twig' with pageParams %}
  </div>

  <div class="col-md-9">
  <!-- Filters -->
  {% if embed %}
    {% include './pages/filters.twig' with pageParams %}
  {% endif %}

  <div class="main-content">

    <button class="navbar-toggler" type="button" style="display:none">
        <span class="navbar-toggler-icon"></span>
    </button>

    {% include './pages/message.twig' %}

    <div class="mb-4">
      <h6 class="section-title">Insights</h6>
    </div>

    <!-- Filters inside generated by Javascript -->
    <div class="alert alert-dark selection" style="display:none"></div>

    <div class="form-group bot-block">
        <div class="top-line"></div>
        <h6 class="subTitle">Top Research Institutes co-Publishing Peer-Reviewed Articles with CRPs and Platforms </h6>
    <div class="form-group row">
      <div class="col-md-7">
        <span class="filter-description">Select one or more countries (press ctrl) to filter.</span>
        <div class="map-container">
          <div id="insights-map"></div>
        </div>
      </div>
      <div class="col-md-5">
        <span class="filter-description">Click on color to filter.</span>
        <div class="heatmap-container">
        <div id="insights-heatmap"></div>
        </div>
      </div>
    </div>
    </div>

    <div class="form-group">
        <div class="top-line"></div>
          <h6 class="subTitle">List of Publications</h6>
        <div class="list-container">
          <div id="insights-list"></div>
        </div>
    </div>

    {% include './pages/footer.twig'  with pageParams %}
