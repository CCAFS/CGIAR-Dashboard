{% set pageParams = {
    'title': 'MELIA Studies | CGIAR Program Results Dashboard',
    'customCSS': [
      'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css',
      'https://use.fontawesome.com/releases/v5.2.0/css/all.css',
      './css/customInputsFlat.css',
      './css/sideMenu.css?20200722',
      './css/global.css',
      './css/fulloicr.css?20200727'
    ],
    'customJS': [
      "./js/MELIA.js?20200717",
      "./js/sideMenu.js"

    ]
  }
%}

{% include './pages/header.twig' with pageParams %}

<div class="container-fluid">
  <!-- Filters -->
  {% if embed %}
    <div class="row justify-content-center">
      <div class="col-md-2" style="display:{{ displayNav ? 'block' : 'none' }}"></div>
      <div class="col-md-10">{% include './pages/filters.twig' with pageParams %}</div>
    </div>
  {% endif %}
<div class="row justify-content-center">
  <div class="col-md-2" style="display:{{ displayNav ? 'block' : 'none' }}">
  {% include './pages/side-menu.twig' with pageParams %}
  </div>
  <div class="col-md-10" {% if displayNav==false %}style="padding-left: 0!important"{% endif %}>
  <div class="main-content">

    <button class="navbar-toggler" type="button" style="display:none">
        <span class="navbar-toggler-icon"></span>
    </button>

    {% include './pages/message.twig' %}

    <a class="btn btn-data" href="https://dataverse.harvard.edu/dataset.xhtml?persistentId=doi:10.7910/DVN/NFNBZC" target="_blank" role="button">Access raw data</a>

    <div class="mb-4">
      <h6 class="section-title">MELIA Studies</h6>
      <p class="section-description">CGIAR Research Programs (CRPs) and Platforms integrate Monitoring, Evaluation, Learning and Impact Assessments (MELIA) to their annual activities. The main purpose of these MELIA studies (more than 210 in 2019) is to test programs assumptions, inform learning and adaptive management, meet accountability requirements, and inform the design of new initiatives (see details below).</p>
    </div>

    <!-- Filters inside generated by Javascript -->
    <div class="alert alert-dark selection" style="display:none"></div>

    <div class="MELIA-charts dashboard-container">
        <div id="all-melia"></div>
    </div>

    {% include './pages/footer.twig'  with pageParams %}
