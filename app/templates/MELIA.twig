{% set pageParams = {
    'title': 'MELIA Studies | CGIAR Program Results Dashboard',
    'customCSS': [
      'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css',
      'https://use.fontawesome.com/releases/v5.2.0/css/all.css',
      './css/customInputsFlat.css?20210617a',
      './css/sideMenuNew.css?20210624a',
      './css/global.css?20210624a',
      './css/fulloicr.css?20210218b'
    ],
    'customJS': [
      "./js/MELIA.js?20210218b",
      "./js/sideMenu.js?20200806b"

    ]
  }
%}

{% include './pages/header.twig' with pageParams %}

<div
	class="container-fluid">
	<!-- Filters -->
	{% if embed %}
    <div class="row justify-content-center">
      <div class="col-md-1" style="display:{{ displayNav ? 'flex' : 'none' }}; justify-content: center;"></div>
      <div class="col-md-10">{% include './pages/filters.twig' with pageParams %}</div>
    </div>
  {% endif %}
<div class="row justify-content-center">
  <div class="col-md-1" style="display:{{ displayNav ? 'flex' : 'none' }}; justify-content: center;">
  {% include './pages/side-menu-new.twig' with pageParams %}
  </div>
  <div class="col-md-11" {% if displayNav==false %} style="padding-left: 0!important" {% endif %}>
			<div class="main-content">

				<button class="navbar-toggler" type="button" style="display:none">
					<span class="navbar-toggler-icon"></span>
				</button>

				{% include './pages/message.twig' %}
				<a class="btn btn-data2" href="./glossary" target="_blank" role="button" style="margin-left: 5px;">Go to Glossary</a>
				<a class="btn btn-data" href="https://doi.org/10.7910/DVN/EAJUZW" target="_blank" role="button">Access raw data</a>

				<div class="mb-4">
					<h6 class="section-title">MELIA Studies</h6>
					<p class="section-description">
						Monitoring, Evaluation, Learning and Impact Assessment (MELIA) studies are used to test programs assumptions, inform learning and adaptive management, meet accountability requirements, and inform the design of new initiatives.
					</p>
				</div>

				<!-- Filters inside generated by Javascript -->
				<div class="alert alert-dark selection" style="display:none"></div>

				<div class="MELIA-charts dashboard-container">
					<div id="all-melia"></div>
				</div>

				{% include './pages/footer.twig'  with pageParams %}
