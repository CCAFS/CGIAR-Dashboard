{% set pageParams = {
    'title': 'Genebanks | CGIAR Program Results Dashboard',
    'customCSS': [
      'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css',
      'https://use.fontawesome.com/releases/v5.2.0/css/all.css',
      './css/customInputsFlat.css',
      './css/sideMenu.css?20200806',
      './css/global.css?20200806',
      './css/fulloicr.css?20200806'
    ],
    'customJS': [
      "./js/genebank.js?20200806",
      "./js/sideMenu.js?20200806"

    ]
  }
%}

{% include './pages/header.twig' with pageParams %}

  <div class="container-fluid">
    <!-- Filters -->
    {% if embed %}
      <div class="row justify-content-center">
        <div class="col-md-2" style="display:{{ displayNav ? 'block' : 'none' }}"></div>
        <div class="col-md-10">{% include './pages/filters.twig' with pageParams %}</div>
      </div>
    {% endif %}
  <div class="row justify-content-center">
    <div class="col-md-2" style="display:{{ displayNav ? 'block' : 'none' }}">
    {% include './pages/side-menu.twig' with pageParams %}
    </div>
    <div class="col-md-10" {% if displayNav==false %}style="padding-left: 0!important"{% endif %}>
    <div class="main-content">
    <button class="navbar-toggler" type="button" style="display:none">
        <span class="navbar-toggler-icon"></span>
    </button>

    {% include './pages/message.twig' %}

    <a class="btn btn-data disabled" href="https://dataverse.harvard.edu/dataset.xhtml?persistentId=doi:10.7910/DVN/NFNBZC" target="_blank" role="button">Access raw data</a>

    <div class="mb-4">
      <h6 class="section-title">Genebanks</h6>
      <p class="section-description">The <a href="https://www.genebanks.org/" target="_blank">CGIAR Genebank Platform</a> led by the <a href="https://www.croptrust.org/" target="_blank">Crop Trust</a>, enables the 11 CGIAR Genebanks to fulfill their legal obligation to conserve and make available accessions of crops and trees on behalf of the global community under the <a href="http://www.fao.org/plant-treaty/en/" target="_blank">International Treaty on Plant Genetic Resources for Food and Agriculture</a>. Through the Platform, CGIAR Genebanks safeguard a unique global resource of crop and tree diversity and respond to thousands of requests for germplasm from users in more than 100 countries worldwide every year. CGIAR Centers also distribute a large quantity of breeding materials at different stages of development, which are not recorded in the figures below but represent more than 70% of the total germplasm exchanged by the CGIAR. These materials are distributed freely through a Standard Material Transfer Agreement or <a href="http://www.icrisat.org/what-we-do/crops/SMTA.pdf" target="_blank">SMTA</a>.</p>
    </div>

    <!-- Filters inside generated by Javascript -->
    <div class="alert alert-dark selection" style="display:none"></div>

    <div class="genebank-charts dashboard-container">
        <div id="all-genebank"></div>
    </div>

    {% include './pages/footer.twig'  with pageParams %}
