{% set pageParams = {
    'title': 'Altmetric | CGIAR Program Results Dashboard',
    'customCSS': [
      'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css',
      'https://use.fontawesome.com/releases/v5.2.0/css/all.css',
      './css/customInputsFlat.css',
      './css/sideMenu.css',
      './css/global.css',
      './css/altmetrics.css'
    ],
    'customJS': [
      "./js/altmetrics.js",
      "./js/sideMenu.js"
    ]
  }
%}

{% include './pages/header.twig' with pageParams %}


<div class="container-fluid">
  <!-- Filters -->
  {% if embed %}
    <div class="from-group">
      {% include './pages/filters.twig' with pageParams %}
    </div>
  {% endif %}
<div class="row justify-content-center">
  <div class="col-md-2">
  {% include './pages/side-menu.twig' with pageParams %}
  </div>
  <div class="col-md-9">
  <div class="main-content">

      <button class="navbar-toggler" type="button">
        <span class="navbar-toggler-icon"></span>
      </button>

      {% include './pages/message.twig' %}

      <div class="mb-4">
        <div class="form-group row d-flex justify-content-between">
          <div class="col-md-auto">
            <h6 class="section-title">Altmetric</h6>
            <p class="section-description">Altmetrics are metrics and qualitative data that are complementary to traditional, citation-based metrics (<a href="https://www.altmetric.com/about-altmetrics/what-are-altmetrics/" target="_blank">view source</a>).  </p>
          </div>
          <div class="col-md-auto altmetric-logo">
            <a href="https://www.altmetric.com/" target="_blank"><img src="./images/Altmetric_rgb.png" height="30px"></a>
          </div>
        </div>
      </div>

      <!-- Filters inside generated by Javascript -->
      <div class="alert alert-dark selection" style="display:none"></div>

      <div class="form-group row">
        <div class="col">
          <div class="data-year"><span class="year-tag badge badge-pill" style="display:none">2018 and 2017</span></div>
          <center>
          <h6 class="subTitle text-center mb-2">Total Information Products<br/> with Altmetric Attention Score</h6>
          <div class="alt-total">
            <div id="total-altmetrics"></div>
          </div>
            <h6 class="subTitle">Total Mentions / Readers Tracked by Altmetric</h6>
            <div class="alt-mentions">
              <div id="altmetrics-mentions"></div>
            </div>
        </div>
        <div class="col-md-7">
          <div class="data-year"><span class="year-tag badge badge-pill" style="display:none">2018 and 2017</span></div>
        <div class="top-line"></div>
          <h6 class="subTitle">Top 10 Altmetric Attention Scores</h6>
          <div class="top-ten">
            <div id="topten-alt"></div>
          </div>
        </div>
      </div>

      <div class="form-group">
          <div class="data-year"><span class="year-tag badge badge-pill" style="display:none">2018 and 2017</span></div>
        <div class="top-line"></div>
          <h6 class="subTitle">All Information Products with Altmetric Attention Score</h6>
            <div class="alt-list">
              <div id="all-altmetrics"></div>
            </div>
      </div>


{% include './pages/footer.twig'  with pageParams %}
