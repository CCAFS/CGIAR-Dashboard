{% set pageParams = {
    'title': 'Altmetric | CGIAR Program Results Dashboard',
    'customCSS': [
      'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css',
      'https://use.fontawesome.com/releases/v5.2.0/css/all.css',
      './css/customInputsFlat.css?20210617a',
      './css/sideMenu.css?20210701a',
      './css/global.css?20210701a',
      './css/fulloicr.css?20210218b'
    ],
    'customJS': [
      "./js/altmetrics.js?20210706a",
      "./js/sideMenu.js?20200806b"
    ]
  }
%}

{% include './pages/header.twig' with pageParams %}


<div class="container-fluid">
  <!-- Filters -->
  {% if embed %}
    <div class="row justify-content-center">
      <div class="col-md-2" style="display:{{ displayNav ? 'block' : 'none' }};"></div>
      <div class="col-md-10">{% include './pages/filters.twig' with pageParams %}</div>
    </div>
  {% endif %}
<div class="row justify-content-center">
  <div class="col-md-2" style="display:{{ displayNav ? 'block' : 'none' }};">
  {% include './pages/side-menu.twig' with pageParams %}
  </div>
  <div class="col-md-10" {% if displayNav==false %}style="padding-left: 0!important"{% endif %}>
  <div class="main-content">

      <button class="navbar-toggler" type="button">
        <span class="navbar-toggler-icon"></span>
      </button>

      {% include './pages/message.twig' %}
      <a class="btn btn-data2" href="./glossary" target="_blank" role="button" style="margin-left: 5px;">Go to Glossary</a>
      <a class="btn btn-data" href=" https://doi.org/10.7910/DVN/V6NR2J" target="_blank" role="button">Access raw data</a>

      <div class="mb-4">
        <div class="form-group row">
          <div class="col-md-auto">
            <h6 class="section-title"><a href="https://www.altmetric.com/" target="_blank"><img src="./images/Altmetric_rgb.png" height="25px"></a> Altmetric</h6>
            <p class="section-description">Altmetrics are metrics and qualitative data that complement traditional, citation-based metrics (<a href="https://www.altmetric.com/about-altmetrics/what-are-altmetrics/" target="_blank">view source</a>).  </p>
          </div>
        </div>
      </div>

      <!-- Filters inside generated by Javascript -->
      <div class="alert alert-dark selection" style="display:none"></div>

      <div class="altmetric-charts dashboard-container">
          <div id="all-altmetric"></div>
      </div>

{% include './pages/footer.twig'  with pageParams %}
